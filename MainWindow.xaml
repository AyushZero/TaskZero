<Window x:Class="TaskZero.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TaskZero" Height="400" Width="20"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid>
        <!-- Notch Control -->
        <Border x:Name="NotchControl"
                Width="20"
                Height="100"
                Background="#FF007ACC"
                MouseEnter="NotchControl_MouseEnter"
                MouseLeave="NotchControl_MouseLeave"
                MouseLeftButtonDown="NotchControl_MouseLeftButtonDown"
                VerticalAlignment="Center">
            <TextBlock Text="Tasks" 
                     Foreground="White"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontSize="10">
                <TextBlock.LayoutTransform>
                    <RotateTransform Angle="90"/>
                </TextBlock.LayoutTransform>
            </TextBlock>
        </Border>

        <!-- Task Panel -->
        <Border x:Name="TaskPanel" 
                Background="#FF2D2D30"
                Width="300"
                HorizontalAlignment="Right"
                Margin="0,0,20,0"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Tasks" 
                         Foreground="White"
                         FontSize="24"
                         Margin="20,20,20,10"/>

                <!-- Task List -->
                <ScrollViewer Grid.Row="1">
                    <ItemsControl x:Name="TaskList" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FF3E3E42" 
                                        Margin="0,5" 
                                        Padding="10"
                                        CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox IsChecked="{Binding IsCompleted}" 
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Title}" 
                                                 Grid.Column="1"
                                                 Margin="10,0"
                                                 Foreground="White"
                                                 VerticalAlignment="Center"/>
                                        <Button Grid.Column="2"
                                                Content="Ã—"
                                                Foreground="White"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Click="DeleteTask_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Add Task -->
                <Grid Grid.Row="2" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="NewTaskTextBox"
                            Background="#FF3E3E42"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10"
                            Margin="0,0,10,0"/>
                    <Button Grid.Column="1"
                            Content="Add"
                            Background="#FF007ACC"
                            Foreground="White"
                            Padding="15,5"
                            Click="AddTask_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window> 