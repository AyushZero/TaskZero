<Window x:Class="TaskZero.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TaskZero" Height="400" Width="20"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="#80000000"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid>
        <!-- Notch Control -->
        <Border x:Name="NotchControl"
                Width="15"
                Height="80"
                Background="#80000000"
                MouseEnter="NotchControl_MouseEnter"
                MouseLeave="NotchControl_MouseLeave"
                MouseLeftButtonDown="NotchControl_MouseLeftButtonDown"
                VerticalAlignment="Center">
            <Path x:Name="NotchIcon" 
                  Data="M 0,0 L 0,80 L 15,60 L 15,20 Z" 
                  Fill="White"
                  Stretch="Uniform"
                  Margin="0"/>
        </Border>

        <!-- Task Panel -->
        <Border x:Name="TaskPanel" 
                Background="#80000000"
                Width="300"
                HorizontalAlignment="Right"
                Margin="0,0,15,0"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Close Button -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1"
                            Content="×"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="24"
                            Padding="10,0"
                            Margin="0,10,10,0"
                            Click="CloseButton_Click"/>
                </Grid>

                <!-- Task List -->
                <ItemsControl x:Name="TaskList" 
                             Grid.Row="1"
                             Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#803E3E42" 
                                    Margin="0,5" 
                                    Padding="10"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox IsChecked="{Binding IsCompleted}" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Title}" 
                                             Grid.Column="1"
                                             Margin="10,0"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                                    <Button Grid.Column="2"
                                            Content="×"
                                            Foreground="White"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="DeleteTask_Click"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Add Task -->
                <Grid Grid.Row="2" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="NewTaskTextBox"
                            Background="#803E3E42"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10"
                            Margin="0,0,10,0"/>
                    <Button Grid.Column="1"
                            Content="+"
                            Background="#80404040"
                            Foreground="White"
                            FontSize="20"
                            Width="40"
                            Height="40"
                            Click="AddTask_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window> 